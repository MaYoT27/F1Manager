@{ ViewData["Title"] = "Add race"; }

@model RaceModel

<h1>Add race</h1>

<form method="POST" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Track">Track</label>
        <input asp-for="Track" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Length">Lap Length (m)</label>
        <input asp-for="Length" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Add new race" />
    </div>
</form>